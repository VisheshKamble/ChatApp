<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="72dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:background="@android:color/transparent">

    <!-- Avatar -->
    <ImageView
        android:id="@+id/ivAvatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/circle_user_regular_full"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Time (right, baseline with name) -->
    <TextView
        android:fontFamily="@font/poppinsregular"
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:24"
        android:textSize="12sp"
        android:textColor="#80868B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/tvUserName" />

    <!-- Unread badge (under time) -->
    <TextView
        android:id="@+id/tvPendingMessages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="20dp"
        android:minHeight="20dp"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:gravity="center"
        android:text="3"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@drawable/bg_circle_red"
        android:layout_marginTop="4dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTime" />

    <!-- Barrier so text never overlaps time/badge -->
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/rightBarrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="start"
        app:barrierAllowsGoneWidgets="true"
        app:constraint_referenced_ids="tvTime,tvPendingMessages" />

    <!-- Name -->
    <TextView
        android:fontFamily="@font/poppins_medium"
        android:id="@+id/tvUserName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="User Name"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/ivAvatar"
        app:layout_constraintEnd_toStartOf="@id/rightBarrier"
        app:layout_constraintTop_toTopOf="@id/ivAvatar" />

    <!-- Last message -->
    <TextView
        android:id="@+id/tvLastMessage"
        android:fontFamily="@font/poppinsregular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Last message previewâ€¦"
        android:textSize="14sp"
        android:textColor="#6F6F6F"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="@id/tvUserName"
        app:layout_constraintEnd_toStartOf="@id/rightBarrier"
        app:layout_constraintTop_toBottomOf="@id/tvUserName" />

    <!-- Bottom divider inset to text column -->
    <View
        android:id="@+id/bottomDivider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="#E0E0E0"
        app:layout_constraintStart_toStartOf="@id/tvUserName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLastMessage"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>








