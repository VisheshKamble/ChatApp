<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp">

    <!-- Push content to right -->
    <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <!-- Container for message, time, and tick -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/sent_msg_gradient"
        android:padding="12dp"
        android:layout_marginEnd="12dp"
        android:elevation="4dp">

        <TextView
            android:id="@+id/tvSentMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sent message"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_medium"
            android:shadowColor="#22000000"
            android:shadowRadius="1"
            android:shadowDx="1"
            android:shadowDy="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/tvSentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:00 PM"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppinsregular"
                android:shadowColor="#22000000"
                android:shadowRadius="0.5"
                android:shadowDx="0.5"
                android:shadowDy="0.5" />

            <ImageView
                android:id="@+id/ivTick"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="6dp"
                android:src="@drawable/ic_double_tick"
                android:contentDescription="Tick Icon"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>