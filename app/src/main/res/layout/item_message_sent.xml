<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- Push content to right -->
    <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <!-- Container for message, time, and tick -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
    android:background="@drawable/sent_msg_bg"
    android:padding="10dp"
    android:layout_marginEnd="8dp">

    <TextView
        android:fontFamily="@font/poppins_medium"
        android:id="@+id/tvSentMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sent message"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="4dp">

        <TextView
            android:fontFamily="@font/poppinsregular"
            android:id="@+id/tvSentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:00 PM"
            android:textSize="10sp"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/ivTick"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/ic_single_tick"
            android:contentDescription="Tick Icon" />
    </LinearLayout>
</LinearLayout>
    </LinearLayout>


