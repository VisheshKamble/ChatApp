<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/neutral_white">

        <!-- Header Area -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:background="@drawable/header_gradient"
            android:elevation="8dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <!-- Back Arrow with Animation -->
            <ImageView
                android:id="@+id/backArrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="20dp"
                android:src="@drawable/arrow_left_solid"
                android:contentDescription="Back"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@color/white"
                android:animateLayoutChanges="true" />

            <!-- Centered Title with Margin -->
            <TextView
                android:id="@+id/chatUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/poppinsbold"
                android:text="Chat with User"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:shadowColor="#55000000"
                android:shadowRadius="2"
                android:shadowDx="1"
                android:shadowDy="1" />
        </androidx.appcompat.widget.Toolbar>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/divider_glow" />

        <!-- RecyclerView for Messages -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chatRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:overScrollMode="never"
            android:background="@drawable/recycler_background"
            android:padding="16dp"
            android:clipToPadding="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:divider="@drawable/divider_line"
            android:dividerHeight="1dp"
            android:contentDescription="List of chat messages" />

        <!-- Message Input -->
        <LinearLayout
            android:id="@+id/messageInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@drawable/input_gradient_vibrant"
            android:elevation="10dp">

            <EditText
                android:id="@+id/etMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/poppinsregular"
                android:background="@drawable/rounded_input_glow"
                android:hint="Type a message..."
                android:maxLines="4"
                android:padding="14dp"
                android:textColor="@color/primary_text"
                android:textColorHint="@color/hint_text"
                android:elevation="4dp" />

            <ImageButton
                android:id="@+id/btnSend"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:src="@drawable/ic_send"
                android:background="@android:color/transparent"
            android:contentDescription="Send"
            app:tint="@color/white" />
        </LinearLayout>
    </LinearLayout>
</layout>